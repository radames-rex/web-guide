#top-nav
  background-color #555

#top-nav-links
  a
    color #fff

#site-nav
  background-color #fff
  border-bottom 1px solid #e5e5e5


.colors
  width 100%
  display table
  margin-bottom 40px
  .box
    display inline-block
    width 23%
    margin 0 1%
    span
      text-align center
      width 100%
      display block
      margin-top 10px
      text-transform uppercase
      font-size 14px
    .inner
      padding 20px
      text-align center
      color #fff
      border-radius 4px


.headings
  .h1, .h2, .h3, .h4, .h5, .h6
    display block
    margin-bottom 10px
  .h1
    font-size 50px
  .h2
    font-size 42px
  .h3
    font-size 36px
  .h4
    font-size 30px
  .h5
    font-size 24px
  .h6
    font-size 15px


@font-face {
  font-family: 'fontello';
  src: url('../font/fontello.eot?24797554');
  src: url('../font/fontello.eot?24797554#iefix') format('embedded-opentype'),
       url('../font/fontello.woff2?24797554') format('woff2'),
       url('../font/fontello.woff?24797554') format('woff'),
       url('../font/fontello.ttf?24797554') format('truetype'),
       url('../font/fontello.svg?24797554#fontello') format('svg');
  font-weight: normal;
  font-style: normal;
}
 [class^="icon-"]:before, [class*=" icon-"]:before {
  font-family: "fontello";
  font-style: normal;
  font-weight: normal;
  speak: none;
  display: inline-block;
  text-decoration: inherit;
  width: 1em;
  margin-right: .2em;
  text-align: center;
  font-variant: normal;
  text-transform: none;
  line-height: 1em;
  margin-left: .2em;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

